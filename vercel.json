{
    "version": 2,
    "builds": [
      {
        "src": "/server.js",
        "use": "@vercel/node", 
        "config": {
          "runtime": "nodejs18.x",
          "experimental": {
            "optimizeFor:": {
              "production": "speed" 
            }
          }
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/server.js" 
      }
    ]
  }